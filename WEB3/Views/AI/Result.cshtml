@{
    Layout = "_Layout";  // Eğer bir Layout kullanıyorsanız, burayı değiştirebilirsiniz.
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analiz Sonucu</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .baslik
        {
            width: 600px;
            height: 300px;
            background: url("/assets/img/salon/Analysis.png") no-repeat center center fixed;
            background-size:contain;
            border-radius: 10%;
        }

        .result-container {
            width 50%;
            padding: 20px;
            background-color: black;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            text-align: center;
            margin-top: 120px; /* Sayfa üst kısmına biraz boşluk */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Sayfanın yüksekliği kadar yer kaplar */
            flex-direction: column; /* Sayfa içeriğini dikeyde sıralar */
        }

          

            .result-container p {
                color: #fff;
                font-size: 18px;
                margin: 15px 0;
            }

            .result-container .color-box {
                width: 100px;
                height: 100px;
                margin: 20px auto;
                border-radius: 50%;
                display: inline-block;
            }

        .btn {
            background-color: #bda2c8;
            border-color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            color:#fff;
        }

            .btn:hover {
                background-color: #5a31a2;
                border-color: #5a31a2;
            }

    </style>
</head>
<body>
    <div class="result-container">
        <div class="baslik"></div>

        @if (ViewBag.Suggestion != null)
        {
            <p><strong style="color:#bda2c8">Hair Color Suggestion:</strong> @ViewBag.Suggestion</p>
        }
        else
        {
            <p><strong style="color:#bda2c8">Hair Color Suggestion:</strong> Renk bilgisi bulunamadı.</p>
        }

        @if (ViewBag.AvgColor != null)
        {
            <p><strong style="color:#bda2c8">Average Skin Undertone Color(RGB):</strong> @ViewBag.AvgColor</p>

        }
        else
        {
            <p><strong>Average Skin Undertone Color(RGB):</strong> Color information not found.</p>
        }

        <a href="/AI/Index" class="btn">Upload a new image</a>
    </div>
</body>
</html>
