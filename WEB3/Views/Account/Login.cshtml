@{
    ViewData["Title"] = "Log In";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    @if (ViewBag.Error != null)
    {
        <p style="color:red;">@ViewBag.Error</p>
    }
    <style>
        body {
            margin: 0;
            padding: 0;
            background: url("/assets/img/salon/salon_reception.jpg") no-repeat center center fixed;
            background-size: cover;
            font-family: Arial, sans-serif;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-form {
            background: rgba(0, 0, 0, 0.5);
            padding: 20px 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 300px;
            text-align: center;
        }

        .login-form h1 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #bda2c8;
        }

        .login-form input {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

        .login-form button {
            width: 100%;
            padding: 10px;
            background-color: #bda2c8;
            border: none;
            color: white;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
        }

        .login-form button:hover {
            background-color: #241f29;
        }


        .login-form small {
            display: block;
            margin-top: 10px;
        }

        .remember-forgot {
            display: flex;
            justify-content: space-between;
            font-size: 12px;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-form">
            <h1>Log In</h1>
            <form asp-action="Log In" method="post">
                <input type="text" name="username" placeholder="User Name" required>
                <input type="password" name="password" placeholder="Password" required>
               
                <button type="submit">Log In</button>
            </form>
            <small>Don't you have an account? <a asp-action="Register">Sign Up</a></small>
        </div>
    </div>
</body>
</html>
