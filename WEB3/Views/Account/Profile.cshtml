@{
    ViewData["Title"] = "Profilim";
}

<div class="container mt-5" data-aos="fade-up">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="sidebar bg-light p-3 rounded">
                <h4>Profil Menüsü</h4>
                <ul class="list-group">
                    <li class="list-group-item">
                        <a href="#" class="text-decoration-none">Profil Bilgileri</a>
                    </li>
                   
                    {
                        <li class="list-group-item">
                            <a asp-controller="Appointments" asp-action="BookAppointment" class="text-decoration-none">Randevu Al</a>
                        </li>
                        <li class="list-group-item">
                            <a asp-controller="Appointments" asp-action="MyAppointments" class="text-decoration-none">Randevularım</a>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Ana İçerik -->
        <div class="col-md-9">
            <div class="content bg-white p-4 rounded shadow-sm">
                <h2>Profil Bilgilerim</h2>
                <form>
                    <div class="mb-3">
                        <label for="firstName" class="form-label">Ad:</label>
                        <input type="text" id="firstName" class="form-control" value="Dilara" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Soyad:</label>
                        <input type="text" id="lastName" class="form-control" value="Şentürk" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">E-posta:</label>
                        <input type="email" id="email" class="form-control" value="dilara@example.com" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Telefon:</label>
                        <input type="tel" id="phone" class="form-control" value="555-123-4567" readonly>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .sidebar {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .sidebar h4 {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 15px;
        }

    .list-group-item {
        padding: 10px 15px;
        border: none;
    }

        .list-group-item:hover {
            background-color: #f0f0f0;
        }

        .list-group-item a {
            color: #333;
        }

            .list-group-item a:hover {
                text-decoration: none;
            }

    .content {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .content h2 {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 20px;
        }
</style>
