@model List<WEB3.Models.Appointments>

@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
           <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row ">
                        <div class="col-12 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Randevu Durumu</h4>
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        <div class="form-check form-check-muted m-0">
                                                            <label class="form-check-label">
                                                                <input type="checkbox" class="form-check-input">
                                                            </label>
                                                        </div>
                                                    </th>
                                                    <th> Müşteri Adı </th>
                                                    <th> Çalışan Adı </th>
                                                    <th> Hizmet </th>
                                                    <th> Süre (dk) </th>
                                                    <th> Toplam Fiyat </th>
                                                    <th> Tarih ve Saat </th>
                                                    <th> Durum </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var appointment in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            <div class="form-check form-check-muted m-0">
                                                                <label class="form-check-label">
                                                                    <input type="checkbox" class="form-check-input">
                                                                </label>
                                                            </div>
                                                        </td>
                                                      
                                                        <td>
                                                            <span class="pl-2">@appointment.CustomerName</span>
                                                        </td>
                                                        <td> @appointment.EmployeeName</td>
                                                        <td> @appointment.ServiceName</td>
                                                        <td> @appointment.process</td>
                                                        <td> @appointment.totalprice.ToString("C") </td>
                                                        <td> @appointment.appointmentdatetime.ToString("dd MMM yyyy") </td>
                                                        <td>
                                                            @if (appointment.approvalstatus == "Approved")
                                                            {
                                                                <div class="badge badge-outline-success">Onaylı</div>
                                                            }
                                                            else
                                                            {
                                                                <div class="badge badge-outline-danger">Onaysız</div>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                 </div>
            </div>
      
    

                   