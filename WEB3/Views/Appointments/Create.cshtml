@model WEB3.Models.Appointments

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yeni Randevu</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h3>Yeni Randevu Oluştur</h3>
        <form method="post" action="/appointments/create">
            <div class="mb-3">
                <label for="salon" class="form-label">Salon Seçiniz</label>
                <select class="form-select" id="salon" name="SalonId" required>
                    <option selected disabled>Salon Seçiniz...</option>
                    @foreach (var salon in ViewBag.Salons)
                    {
                        <option value="@salon.SalonId">@salon.SalonName</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label for="service" class="form-label">Hizmet Seçiniz</label>
                <select class="form-select" id="service" name="ServiceId" required>
                    <option selected disabled>Hizmet Seçiniz...</option>
                    @foreach (var service in ViewBag.Services)
                    {
                        <option value="@service.ServiceId">@service.ServiceName</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label for="employee" class="form-label">Çalışan Seçiniz</label>
                <select class="form-select" id="employee" name="EmployeeId" required>
                    <option selected disabled>Çalışan Seçiniz...</option>
                    @foreach (var employee in ViewBag.Employees)
                    {
                        <option value="@employee.EmployeeId">@employee.FirstName @employee.LastName</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label for="datetime" class="form-label">Tarih ve Saat</label>
                <input type="datetime-local" class="form-control" id="datetime" name="AppointmentTime" required>
            </div>
            <button type="submit" class="btn btn-success">Randevu Oluştur</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
